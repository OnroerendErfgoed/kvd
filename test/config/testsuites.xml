<?xml version="1.0" encoding="UTF-8" ?>
<phpunit>
	<testsuites>
		<testsuite name="Database">
			<directory>../tests/database/</directory>
		</testsuite>
		<testsuite name="Domain">
			<directory>../tests/domain/</directory>
		</testsuite>
		<testsuite name="Gis">
			<directory>../tests/gis/</directory>
		</testsuite>
		<testsuite name="Html">
			<directory>../tests/html/</directory>
		</testsuite>
		<testsuite name="Thesaurus">
			<directory>../tests/thesaurus/</directory>
		</testsuite>
		<testsuite name="Util">
			<directory>../tests/util/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist addUncoveredFilesFromWhiteList="true">
			<directory suffix=".php">../../classes/database/criteria</directory>
			<directory suffix=".php">../../classes/domain/</directory>
			<directory suffix=".php">../../classes/util/</directory>
			<directory suffix=".php">../../classes/gis/</directory>
			<directory suffix=".php">../../classes/html/</directory>
			<directory suffix=".php">../../classes/thesaurus/</directory>
			<exclude>
				<directory suffix=".php">../../vendor/*</directory>
				<file>../../classes/util/KVDutil_GetDeclaredClassesFilter.class.php</file>
			</exclude>
		</whitelist>
	</filter>
</phpunit>
